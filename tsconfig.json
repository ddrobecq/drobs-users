{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "outDir": "./dist", // Specify the output folder for compiled JavaScript
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": ["./**/*.ts", "./**/*.tsx"], // Specify the path to your TypeScript files
  "exclude": ["dist", "node_modules"] // Specify the path to your TypeScript files
}